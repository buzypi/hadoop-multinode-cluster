<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <!-- NameNode metadata directory -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/opt/hadoop/namenode-data</value>
        <description>Directory to store the namenode's metadata</description>
    </property>
    
    <!-- DataNode data directories -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/opt/hadoop/datanode-data</value>
        <description>Directory to store the datanode's blocks</description>
    </property>
    
    <!-- Replication factor -->
    <property>
        <name>dfs.replication</name>
        <value>2</value>
        <description>Default replication factor</description>
    </property>
    
    <!-- Block size (134217728 = 128MB) -->
    <property>
        <name>dfs.blocksize</name>
        <value>134217728</value>
        <description>Default block size</description>
    </property>
    
    <!-- NameNode HTTP address -->
    <property>
        <name>dfs.http.address</name>
        <value>0.0.0.0:9870</value>
        <description>NameNode HTTP address</description>
    </property>
    
    <!-- Secondary NameNode HTTP address -->
    <property>
        <name>dfs.secondary.http.address</name>
        <value>0.0.0.0:9868</value>
        <description>Secondary NameNode HTTP address</description>
    </property>
</configuration>